@model IEnumerable<FINALPROJECT.Domain.Models.ResponseModel.CustomerResponseModel>
@{
    Layout = "_Layout";
}

<h2>Customer List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Gender</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id">View</a> 
                </td>
            </tr>
        }
    </tbody>
</table>

