@model ICollection<FINALPROJECT.Domain.Models.ResponseModel.AddressResponseModel>

@{
    ViewData["Title"] = "Addresses";
    Layout = "CustomerLayout";
}

<h1>Addresses</h1>

<p>
    <a asp-action="Create" asp-controller="Address">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Number</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Number</td>
                <td>@item.Street</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.PostalCode</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

