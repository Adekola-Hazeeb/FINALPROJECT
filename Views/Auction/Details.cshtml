@model FINALPROJECT.Domain.Models.ResponseModel.AuctionResponseModel

@{
    ViewData["Title"] = "Auction Details";
    Layout = "_Layout";
}

<h2>@Model.Name</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Starting Price</dt>
        <dd class="col-sm-10">@Model.StartingPrice</dd>

        <dt class="col-sm-2">Current Price</dt>
        <dd class="col-sm-10">@Model.CurrentPrice</dd>

        <dt class="col-sm-2">Auction End Date</dt>
        <dd class="col-sm-10">@Model.AuctionEndDate</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="@Url.Content($"~/Uploads/{Model.ImageURL}")" alt="Car Image" class="img-fluid" />
        </dd>
    </dl>
</div>

<a href="@Url.Action("Index", "Auction")" class="btn btn-secondary">Back to List</a>

