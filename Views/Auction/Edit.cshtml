@model FINALPROJECT.Domain.Models.RequestModel.AuctionRequestModel

@{
    ViewData["Title"] = "Edit Auction";
    Layout = "_Layout";
}

<h2>Edit Auction</h2>

<form asp-action="Edit" asp-controller="Auction">
    <div class="form-group">
        <label asp-for="AuctionEndDate" class="control-label"></label>
        <input asp-for="AuctionEndDate" class="form-control" />
        <span asp-validation-for="AuctionEndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartingPrice" class="control-label"></label>
        <input asp-for="StartingPrice" class="form-control" />
        <span asp-validation-for="StartingPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<a href="@Url.Action("Index", "Auction")" class="btn btn-secondary">Back to List</a>

